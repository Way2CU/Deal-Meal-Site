<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE document SYSTEM "../units/schema/language.dtd">
<document>
	<cms:var name="_DOCTYPE"/>
	<html lang="$language" cms:eval="lang">
		<head>
			<title><cms:text constant="site_title"/></title>
			<link rel="stylesheet" type="text/css" href="//fonts.googleapis.com/css?family=Open+Sans" />
			<cms:collection include="page_control"/>
			<cms:module name="head_tag" action="print_tag"/>
		</head>

		<body class="$language_rtl ? 'rtl' : 'ltr'" cms:eval="class">
			<cms:svg file="site-sprite.svg"/>

			<header>
				<div id="intro">
					<img src="_BASEURL.'/site/images/logo.svg'" cms:eval="src" />
					<img src="_BASEURL.'/site/images/logotype.svg'" cms:eval="src" />
					<img src="_BASEURL.'/site/images/breaking.svg'" class="break" cms:eval="src"/>

					<p><cms:text constant="title_application"/></p>

					<a href="#" class="google"></a>
					<a href="#" class="app"></a>
				</div>

				<cms:module
					name="gallery"
					action="show_image_list"
					group="header_slider"
					template="parts/slider_template.xml"
					/>
					
			</header>

			<section id="video">

				<img src="_BASEURL.'/site/images/logotype.svg'" cms:eval="src" />

				<span>
					<cms:text constant="title_video"/>
				</span>

				<br/>

				<cms:module
					name="youtube"
					action="show"
					text_id="deal_meal_video"
					template="parts/video.xml"	
					/>
				
			</section>

			<section id="clients">

				<a href="javascript:void(0)" class="previous">
					<svg>
						<use
							href="#icon-play"
							xlink:href="site/images/site-sprite.svg#icon-play"
							/>
					</svg>
				</a>

				<div class="images_container">
					<cms:module
						name="gallery"
						action="show_image_list"
						group="clients"
						template="parts/client_images.xml"
						/>
				</div>	

				<a href="javascript:void(0)" class="next">
					<svg>
						<use
							href="#icon-play"
							xlink:href="site/images/site-sprite.svg#icon-play"
							/>
					</svg>
				</a>

			</section>
		</body>
	</html>
</document>
